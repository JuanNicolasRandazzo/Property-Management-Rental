@model IEnumerable<ASPN.Property_Rental_Management_Final_Project.Models.Employee>

@{
    ViewBag.Title = "Manage Property Managers";
}

<h2>Manage Property Managers</h2>
<p>
    @Html.ActionLink("Create New Property Manager", "Create", "Employees")
</p>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var propertyManager in Model)
        {
            <tr>
                <td>@propertyManager.FirstName</td>
                <td>@propertyManager.LastName</td>
                <td>@propertyManager.User.Username</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = propertyManager.EmployeeID }) |
                    @Html.ActionLink("Details", "Details", new { id = propertyManager.EmployeeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = propertyManager.EmployeeID })
                </td>
            </tr>
        }
    </tbody>
</table>


