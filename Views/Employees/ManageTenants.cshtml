@model IEnumerable<ASPN.Property_Rental_Management_Final_Project.Models.Tenant>

@{
    ViewBag.Title = "Manage Tenants";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Tenant", "Create", "Tenants")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Username)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Tenants", new { id = item.TenantID },null)
                @Html.ActionLink("Details", "Details", "Tenants", new { id = item.TenantID },null)
                @Html.ActionLink("Delete", "Delete", "Tenants", new { id = item.TenantID }, null)
            </td>
        </tr>
    }
</table>
